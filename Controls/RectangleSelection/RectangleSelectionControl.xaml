<UserControl
    x:Class="Huyn.RectangleSelectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" IsHitTestVisible="False"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Canvas x:Name="RootPanel" Visibility="Collapsed" Background="Transparent"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Rectangle x:Name="SelectionRect" Height="200" Width="200" Style="{StaticResource RectangleSelectioStyle}" />
    </Canvas>
</UserControl>
